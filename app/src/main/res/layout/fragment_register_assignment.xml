<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent"
    tools:context=".main.ui.activityMain.subject.registerassignment.RegisterAssignmentFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_outer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id = "@+id/include_header_register_assignment"
                layout="@layout/include_header"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_name_assignment"
                style="@style/editext_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/form_assignment_name"
                android:textColorHint="@color/color_secondary_text"
                android:layout_marginTop="@dimen/margin_between" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name_Assignment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:hint="@string/form_assignment_name"
                    android:paddingHorizontal="16dp"
                    android:imeOptions="actionNext" >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_assignment_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="@dimen/margin_between"
                android:backgroundTint="@color/white"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_assignment_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_between"
                    android:layout_weight="8"
                    android:hint="@string/form_assignment_date" />

                <ImageView
                    android:id="@+id/iv_calendar_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/margin_between"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="@string/tools_image"/>
            </LinearLayout>

            <!-- Assignment -->
            <LinearLayout
                android:id="@+id/ll_assignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/margin_extra_outer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/assignment_type"
                    android:textColor="@color/color_principal_text"
                    android:layout_gravity="clip_vertical"
                    android:layout_marginTop="@dimen/margin_between"/>

                <include
                    android:id = "@+id/include_spinner_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_8dp"
                    layout="@layout/card_spinner"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_student_assignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between"
                android:orientation="vertical"
                android:background="@color/color_transparent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recycler_card_student_assignment" />

            <!-- Button -->
            <include
                android:id = "@+id/include_button_register_assignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_between"
                layout="@layout/include_button"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>