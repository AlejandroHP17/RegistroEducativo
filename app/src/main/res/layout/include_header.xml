<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent">

    <ImageView
        android:id="@+id/btn_return"
        android:layout_width="@dimen/touch_google"
        android:layout_height="@dimen/touch_google"
        android:layout_marginTop="@dimen/margin_outer"
        android:src="@drawable/ic_return"
        android:padding="@dimen/padding_6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_outer"
        tools:text="@string/tools_title"
        android:textColor="@color/color_principal_text"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintBottom_toTopOf="@id/tv_insert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_return" />

    <TextView
        android:id="@+id/tv_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        tools:text="@string/tools_body"
        android:textColor="@color/color_principal_text"
        android:textSize="@dimen/text_size_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>