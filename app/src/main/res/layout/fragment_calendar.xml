<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent"
    android:padding="@dimen/margin_outer"
    tools:context=".main.ui.activityMain.evaluation.CalendarFragment">

    <include
        android:id = "@+id/include_header_calendar"
        layout="@layout/include_header"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/include_header_calendar" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_between">

            <DatePicker
                android:id="@+id/cv_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/margin_empty_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/CalendarStyle"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_selector_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_transparent"
                android:backgroundTint="@color/color_transparent"
                app:layout_constraintTop_toBottomOf="@id/cv_calendar"
                app:cardCornerRadius="@dimen/margin_between"
                android:layout_marginTop="@dimen/margin_between">

                <LinearLayout
                    android:id="@+id/ll_cv_selector_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/color_transparent"
                    android:backgroundTint="@color/color_transparent">

                    <!-- Parte Izquierda -->
                    <View
                        android:id="@+id/view_left_calendar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/touch_google"
                        android:layout_weight="1"
                        android:background="@color/color_success"
                        android:clickable="true"
                        android:focusable="true"/>

                    <!-- Parte Derecha -->
                    <View
                        android:id="@+id/view_right_calendar"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/touch_google"
                        android:layout_weight="1"
                        android:backgroundTint="@color/color_transparent"
                        android:background="@color/color_transparent"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_calendar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_between"
                android:orientation="vertical"
                android:background="@color/color_transparent"
                app:layout_constraintTop_toBottomOf="@id/cv_selector_calendar"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recycler_card_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>