<resources>

    <!-- Tema para la Splash Screen -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- Fondo del splash screen -->
        <item name="windowSplashScreenBackground">@drawable/bg_empty_state</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">8000</item>
        <item name="postSplashScreenTheme">@style/Theme.App.RegistroEducativo</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.App.RegistroEducativo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowSplashScreenBackground">@color/color_bg_second</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>