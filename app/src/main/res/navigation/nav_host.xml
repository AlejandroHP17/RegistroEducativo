<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.mx.liftechnology.registroeducativo.main.ui.activityMain.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_studentFragment"
            app:destination="@id/studentFragment" />

        <action
            android:id="@+id/action_menuFragment_to_subMenuFragment"
            app:destination="@id/subMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentFragment"
        android:name="com.mx.liftechnology.registroeducativo.main.ui.activityMain.student.fragment.StudentFragment"
        android:label="fragment_student"
        tools:layout="@layout/fragment_student" >
        <action
            android:id="@+id/action_studentFragment_to_formStudenFragment"
            app:destination="@id/formStudenFragment" >
            <argument
                android:name="itemStudent"
                app:argType="com.mx.liftechnology.data.model.StudentEntity"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/formStudenFragment"
        android:name="com.mx.liftechnology.registroeducativo.main.ui.activityMain.student.fragment.FormStudentFragment"
        android:label="fragment_form_studen"
        tools:layout="@layout/fragment_form_studen" >
        <argument
            android:name="itemStudent"
            app:argType="com.mx.liftechnology.data.model.StudentEntity"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_formStudenFragment_to_studentFragment"
            app:destination="@id/studentFragment"
            app:popUpTo="@id/formStudenFragment"
            app:popUpToInclusive="true"/>

    </fragment>
    <fragment
        android:id="@+id/subMenuFragment"
        android:name="com.mx.liftechnology.registroeducativo.main.ui.activityMain.menu.submenu.SubMenuFragment"
        android:label="SubMenuFragment"
        tools:layout="@layout/fragment_menu"/>
</navigation>